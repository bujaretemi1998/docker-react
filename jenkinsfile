pipeline {
    agent any
    stages {
        stage('Node Build') {
    	    agent {
      	        docker {
        	        image 'node:16-alpine'
                }
            }
            steps {
                sh 'npm install'
            }
        }
        stage('Docker Build') {
            agent any
            steps {
                sh 'docker build -t bujaretemi1998/docker-react .'
            }
        }
        stage('Docker Test') {
            agent any
            steps {
                sh 'docker run bujaretemi1998/docker-react npm test'
            }
        }
    }
}
