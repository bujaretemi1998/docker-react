pipeline {
    agent any
    tools {
        docker
    }
    stages {
        stage('Build') {
            steps {
                sh 'docker build -t bujaretemi1998/docker-react -f Dockerfile.dev .'
            }
        }
        stage('Test') {
            steps {
                sh 'docker run bujaretemi1998/docker-react npm run test -- --coverage'
            }
        }
    }
}