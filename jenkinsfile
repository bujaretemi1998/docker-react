pipeline {
    agent any
    stages {
        stage('Build Project with Node') {
            agent {
                docker {
                    image 'node:16-alpine'
                }
            }
            steps {
                sh 'npm install'
            }
        }
        stage('Run Tests with Node') {
            agent {
                docker {
                    image 'node:16-alpine'
                }
            }
            steps {
                sh 'npm test'
            }
        }
    }
}
