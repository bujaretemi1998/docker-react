pipeline {
    stages {
        stage('alpine Install') {
    	agent {
      	docker {
        	image 'node:16-alpine'
        }
      }
      steps {
      	sh 'node clean install'
      }
    }
        stage('Docker Build') {
            steps {
                sh 'docker build -t bujaretemi1998/docker-react -f Dockerfile.dev .'
            }
        }
        stage('Docker Test') {
            steps {
                sh 'docker run bujaretemi1998/docker-react npm run test -- --coverage'
            }
        }
    }
}